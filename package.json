{
  "name": "footy-data-kit",
  "version": "0.1.0",
  "description": "Generate and clean your footy data for your next project.",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "lefthook install"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "soccer",
    "football",
    "soccer-data",
    "football-data",
    "data-parser",
    "data-cleaning",
    "wikipedia",
    "web-scraping"
  ],
  "author": {
    "name": "Dylan Steele",
    "email": "dylansteele57@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "cheerio": "^1.1.2",
    "commander": "^14.0.1",
    "entities": "^6.0.1",
    "fast-csv": "^5.0.5",
    "wikipedia": "^2.1.2"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^16.2.3",
    "lefthook": "^1.3.7"
  },
  "lint-staged": {
    "*.{js,mjs,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,mjs}": [
      "eslint --fix",
      "git add"
    ]
  }
}
