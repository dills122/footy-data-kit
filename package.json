{
  "name": "footy-data-kit",
  "version": "0.5.0",
  "description": "Generate and clean your footy data for your next project.",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -c jest.integration.config.js",
    "test:integration:promotion": "cross-env NODE_OPTIONS=--experimental-vm-modules WIKI_TEST_SOURCE=promotion jest -c jest.integration.config.js",
    "test:integration:overview": "cross-env NODE_OPTIONS=--experimental-vm-modules WIKI_TEST_SOURCE=overview jest -c jest.integration.config.js",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "lefthook install"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "soccer",
    "football",
    "soccer-data",
    "football-data",
    "data-parser",
    "data-cleaning",
    "wikipedia",
    "web-scraping"
  ],
  "author": {
    "name": "Dylan Steele",
    "email": "dylansteele57@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "entities": "^6.0.1",
    "fast-csv": "^5.0.5",
    "wikipedia": "^2.4.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "lefthook": "^1.13.6"
  },
  "lint-staged": {
    "*.{js,mjs,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,mjs}": [
      "eslint --fix",
      "git add"
    ]
  }
}
